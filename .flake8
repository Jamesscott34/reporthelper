[flake8]
max-line-length = 88
extend-ignore =
    E203, W503, E501,
    DJ01, DJ08,
    D100, D101, D102, D103, D104, D105, D106, D107,
    D200, D202, D203, D212, D213, D400, D401, D415

exclude =
    migrations,
    __pycache__,
    manage.py,
    settings.py,
    .git,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    venv,
    .venv,
    env

per-file-ignores =
    # Tests can have longer lines and relaxed docstring requirements
    */test*.py: E501, D
    # Settings files can have longer lines
    */settings*.py: E501
    # Init files don't need docstrings
    */__init__.py: D104
    # Migration files generated by Django
    */migrations/*.py: E501, D, F401

# Django-specific settings
django-settings-module = ai_report_writer.settings
